<Window
    x:Class="SampleWPFProject.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SampleWPFProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SampleWPFProject.Models"
    xmlns:viewmodels="clr-namespace:SampleWPFProject.ViewModels"
    Title="MainWindow"
    Width="600"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodels:ContentViewModel}"
    mc:Ignorable="d">
    <!--
    <Window.DataContext>
        <viewmodels:ContentViewModel>
    </Window.DataContext>
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Some text" />
        <TreeView
            x:Name="ContentTreeView"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding Content}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type models:ContentBase}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>




</Window>
